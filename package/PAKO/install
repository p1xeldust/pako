if [ "$1" = "--preinst" ]; then
    # Скрипт, выполняемый перед установкой пакета
    echo "Pre Installation script executed correctly"
    exit 1;
fi
if [ "$1" = "--postinst" ]; then
    # Скрипт, выполняемый после установки пакета
    echo "Post Installation script executed correctly"
    exit 1;
fi

if [ "$1" = "--preremove" ]; then
    # Скрипт, выполняемый после удаления пакета
    echo "Pre Remove script executed correctly"
    exit 1;
fi
if [ "$1" = "--postremove" ]; then
    # Скрипт, выполняемый после удаления пакета
    echo "Post Remove script executed correctly"
    exit 1;
fi
